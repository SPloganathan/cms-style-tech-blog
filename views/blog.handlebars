<div class="container">
  <div class="row">
    <div class="col">
      <div class="login-card">
        <h2 class="page-title">Create Blog</h2>
        <form class="form blog-creation-form">
          <div class="mb-3">
            <label for="blog-title" class="form-label">Title</label>
            <input type="text" class="form-control" id="blog-title" />
            <input
              type="hidden"
              class="form-control"
              id="blog-user-id"
              value="{{user_id}}"
            />
          </div>
          <div class="mb-3">
            <label for="blog-content" class="form-label">Content</label>
            <textarea
              type="text"
              class="form-control"
              id="blog-content"
            ></textarea>
          </div>
          <div class="form-group">
            <button class="btn btn-dark" type="submit">Create</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="./js/blog.js"></script>